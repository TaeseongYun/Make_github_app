<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


        <!--TextInputEditText-->
        <item name="colorControlNormal">#2196F3</item>
        <item name="colorControlActivated">#ffffff</item>
    </style>


    <style name="Repo_detail_items">
        <item name="android:layout_marginStart">@dimen/spacing_small</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
    </style>

    <style name="Fork_Many_Mount">
        <item name="android:layout_marginStart">@dimen/spacing_small</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small</item>
        <item name="android:text">@string/followerN</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="EmptyRepositoryTextView">
        <item name="android:text">@string/emptyRepository</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/spacing_x_large</item>
        <item name="android:layout_marginBottom">@dimen/spacing_x_large</item>
    </style>

    <style name="MaterialCardView_style">
        <item name="android:layout_marginTop">@dimen/material_card_view_margin_micro</item>
        <item name="android:layout_marginStart">@dimen/material_card_view_margin_micro</item>
        <item name="android:layout_marginEnd">@dimen/material_card_view_margin_micro</item>
        <item name="android:layout_marginBottom">@dimen/spacing_normal</item>
        <item name="android:elevation">@dimen/material_card_view_margin_micro</item>
        <item name="android:translationZ">@dimen/material_card_view_margin_micro</item>
    </style>


    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">?title_color</item>
    </style>

    <style name="Toolbar.Expand.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="THemeDark" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="appbar_theme">@style/AppbarThemeDark</item>
    </style>

    <style name="TextViewStyle" parent="TextView.DefaultStyle">
        <item name="android:textStyle">italic|bold</item>
        <item name="android:color">#26D0EB</item>
    </style>

    <style name="AppbarThemeDark" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="CustomizingTextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="UserNameTextView">
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginTop">35dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:text">@string/overview</item>
        <item name="android:layout_marginEnd">100dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/spacing_small</item>
    </style>

    <style name="UserSubName">
        <item name="android:text">@string/users</item>
        <item name="android:layout_marginEnd">130dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="UserRepositoryImg">
        <item name="android:src">@drawable/ic_cloud_black_24dp</item>
        <item name="android:layout_marginStart">@dimen/spacing_normal</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
    </style>


    <!--UserInformation TextView Style-->
    <style name="UserInformationTextView">
        <item name="android:text">@string/userInformation</item>
        <item name="android:layout_marginStart">@dimen/spacing_normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="HowManyOfUser">
        <item name="android:text">@string/followerN</item>
        <item name="android:layout_marginStart">@dimen/spacing_normal</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
    </style>

    <style name="FollowingANDFollowers">
        <item name="android:text">@string/followerN</item>
        <item name="android:layout_marginStart">@dimen/spacing_super_huge</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
    </style>

    <style name="UserRepoSummary">
        <item name="android:text">@string/userRepoSummary</item>
        <item name="android:layout_marginStart">@dimen/spacing_normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
