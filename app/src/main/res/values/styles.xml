<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">?title_color</item>
    </style>

    <style name="Toolbar.Expand.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="THemeDark" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="appbar_theme">@style/AppbarThemeDark</item>
    </style>

    <style name="AppbarThemeDark" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
</resources>
