<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <tech.tsdev.github_management.view.main.custom.GlideImageView
            android:id="@+id/detail_user_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/sample_02"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="72dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="@string/overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_user_login_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/detail_user_img"
            android:layout_marginTop="80dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.318" android:textSize="24sp" android:textColor="@color/black"/>
    <TextView
            android:text="@string/github_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_user_name" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/detail_user_img" android:layout_marginStart="8dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/detail_user_login_name"
            app:layout_constraintHorizontal_bias="0.357"/>
    <Button
            android:text="@string/followers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_user_followers" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/detail_user_following"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" android:textSize="18sp"
            android:layout_marginTop="68dp" app:layout_constraintTop_toBottomOf="@+id/detail_user_name"/>
    <Button
            android:text="@string/following"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_user_following"
            app:layout_constraintStart_toEndOf="@+id/detail_user_followers" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="68dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/detail_user_name"/>
    <tech.tsdev.github_management.view.main.custom.GlideImageView
            android:layout_width="40dp"
            android:layout_height="40dp" android:src="@drawable/ic_email_black_24dp"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/detail_user_followers"/>
    <TextView
            android:text="@string/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/detail_user_email" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/imageView" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.475" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/detail_user_followers"
            android:autoLink="email"/>
</android.support.constraint.ConstraintLayout>