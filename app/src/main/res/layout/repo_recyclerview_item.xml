<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView android:layout_width="wrap_content"
                                                       android:layout_height="wrap_content"
                                                       style="@style/MaterialCardView_style">
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
            <tech.tsdev.github_management.view.main.custom.GlideImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="@dimen/spacing_normal"
                    android:layout_marginTop="@dimen/spacing_normal"
                    android:src="@drawable/ic_library_repos_black_24dp"/>

            <LinearLayout android:layout_width="170dp" android:layout_height="50dp"
                          android:orientation="vertical">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:text="@string/repository_name" android:id="@+id/repo_name_recycler_view"
                          android:layout_marginStart="@dimen/spacing_normal"
                android:textSize="@dimen/text_large" android:textColor="@color/black"
                android:textStyle="bold"/>
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:text="@string/users" android:layout_marginStart="@dimen/spacing_x_large"
                          android:id="@+id/user_name_recycler_view"/>
            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>