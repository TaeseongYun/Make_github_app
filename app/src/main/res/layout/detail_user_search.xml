<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="140dp"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools">

    <tech.tsdev.github_management.view.main.custom.GlideImageView android:layout_width="75dp"
                                                                  android:layout_height="75dp"
                                                                  android:layout_marginBottom="8dp"
                                                                  app:layout_constraintBottom_toBottomOf="parent"
                                                                  app:layout_constraintStart_toStartOf="parent"
                                                                  android:layout_marginStart="16dp"
                                                                  android:layout_marginTop="8dp"
                                                                  tools:src="@drawable/sample_02"
                                                                  android:scaleType="centerCrop"
                                                                  app:layout_constraintTop_toTopOf="parent"
                                                                  android:id="@+id/img_user"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              tools:text="textViwe" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
              app:layout_constraintStart_toEndOf="@+id/img_user" android:layout_marginStart="8dp"
              android:textSize="24sp" android:id="@+id/tv_user_name"
              android:textStyle="bold" android:layout_marginBottom="8dp"
              app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
              app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.038"
              app:layout_constraintVertical_bias="0.184"/>

    <tech.tsdev.github_management.view.main.custom.GlideImageView android:layout_width="20dp"
                                                                  android:layout_height="20dp"
                                                                  android:src="@drawable/ic_star_gray_24dp"
                                                                  android:layout_marginBottom="8dp"
                                                                  app:layout_constraintBottom_toBottomOf="parent"
                                                                  android:layout_marginTop="8dp"
                                                                  app:layout_constraintTop_toTopOf="parent"
                                                                  app:layout_constraintEnd_toEndOf="parent"
                                                                  android:layout_marginEnd="8dp"
                                                                  app:layout_constraintStart_toEndOf="@+id/img_user"
                                                                  android:layout_marginStart="8dp"
                                                                  app:layout_constraintHorizontal_bias="0.028"
                                                                  app:layout_constraintVertical_bias="0.509"
                                                                  android:id="@+id/glideImageView"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              tools:text="TEXTVIEW" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
              app:layout_constraintStart_toEndOf="@+id/glideImageView" android:layout_marginStart="8dp"
              android:layout_marginBottom="60dp" app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintHorizontal_bias="0.0" android:id="@+id/tv_star_many"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="@string/star_boundary_repo" android:textSize="24sp"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
              app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/tv_star_many"
              android:layout_marginStart="8dp" android:layout_marginTop="8dp"
              app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.026"
              android:id="@+id/textView3"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              tools:text="000" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
              android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintStart_toEndOf="@+id/textView3" android:layout_marginStart="8dp"
              android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintHorizontal_bias="0.013" app:layout_constraintVertical_bias="0.504"
              android:id="@+id/tv_repo_many"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="@string/repository_name" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
              app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/tv_repo_many"
              android:layout_marginStart="8dp" android:layout_marginTop="8dp"
              app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"
              app:layout_constraintVertical_bias="0.504"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="@string/follows_many" android:layout_marginBottom="32dp"
              app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/img_user"
              android:textStyle="bold" android:textSize="18sp"
              android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.032"
              android:id="@+id/textView5"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              tools:text="000" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
              android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintStart_toEndOf="@+id/textView5" android:layout_marginStart="8dp"
              android:textStyle="bold" android:textSize="18sp" android:id="@+id/user_follows"
              app:layout_constraintHorizontal_bias="0.052"/>
</android.support.constraint.ConstraintLayout>