<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="80dp"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:background="@drawable/bg_gradation">
    <tech.tsdev.github_management.view.main.custom.GlideImageView android:layout_width="60dp"
                                                                  android:layout_height="60dp"
                                                                  tools:src="@drawable/sample_02"
                                                                  app:layout_constraintStart_toStartOf="parent"
                                                                  android:layout_marginStart="8dp"
                                                                  android:layout_marginBottom="8dp"
                                                                  app:layout_constraintBottom_toBottomOf="parent"
                                                                  android:layout_marginTop="8dp"
                                                                  app:layout_constraintTop_toTopOf="parent"
                                                                  android:id="@+id/img_github_search_user"/>
    <TextView
            android:text="@string/github_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_github_user_name" app:layout_constraintStart_toEndOf="@+id/img_github_search_user"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>