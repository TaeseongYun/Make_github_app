<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:background="?attr/selectableItemBackground"
              android:layout_height="wrap_content">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  tools:ignore="UselessParent">
        <com.google.android.material.card.MaterialCardView android:layout_width="match_parent"
                                                      style="@style/MaterialCardView_style"
                                                      android:layout_height="match_parent">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
                <tech.tsdev.github_management.view.main.custom.GlideImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        tools:src="@drawable/sample_02"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:layout_marginBottom="@dimen/spacing_small"
                        android:layout_marginStart="@dimen/spacing_small"
                        android:id="@+id/img_search_user_avatar"/>

                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          tools:text="@string/users" android:layout_toEndOf="@+id/img_search_user_avatar"
                          android:layout_centerVertical="true" android:layout_marginStart="@dimen/spacing_normal"
                          android:id="@+id/tv_search_user_name"
                />
            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

