<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                                             android:layout_height="70dp"
                                             xmlns:tools="http://schemas.android.com/tools">

    <tech.tsdev.github_management.view.main.custom.GlideImageView android:layout_width="50dp"
                                                                  android:layout_height="50dp"
                                                                  tools:src="@drawable/sample_02"
                                                                  app:layout_constraintStart_toStartOf="parent"
                                                                  android:layout_marginStart="8dp"
                                                                  android:layout_marginBottom="8dp"
                                                                  app:layout_constraintBottom_toBottomOf="parent"
                                                                  android:layout_marginTop="8dp"
                                                                  app:layout_constraintTop_toTopOf="parent"
                                                                  android:id="@+id/img_search_user_avatar"/>
    <TextView
            android:text="@string/users"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_search_user_name" app:layout_constraintStart_toEndOf="@+id/img_search_user_avatar"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>